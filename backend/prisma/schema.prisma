generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User roles for access control
enum UserRole {
  SYSTEM_ADMIN
  QUALITY_MANAGER
  INTERNAL_AUDITOR
  DEPARTMENT_HEAD
  VIEWER
}

// Assessment lifecycle states
enum AssessmentStatus {
  DRAFT
  IN_PROGRESS
  UNDER_REVIEW
  COMPLETED
  ARCHIVED
}

// Type of audit being conducted
enum AuditType {
  INTERNAL
  EXTERNAL
  SURVEILLANCE
  CERTIFICATION
}

// Role within an assessment team
enum TeamMemberRole {
  LEAD_AUDITOR
  AUDITOR
  OBSERVER
}

// Severity level for non-conformities
enum Severity {
  MINOR
  MAJOR
  CRITICAL
}

// Non-conformity report status
enum NCRStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

// Corrective action status
enum ActionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  VERIFIED
}

// Priority for corrective actions
enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// Type of evidence attachment
enum EvidenceType {
  DOCUMENT
  IMAGE
  LINK
}

model Organization {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users       User[]
  assessments Assessment[]
  templates   AssessmentTemplate[]

  @@map("organizations")
}

model AssessmentTemplate {
  id            String   @id @default(uuid())
  name          String
  description   String?
  isDefault     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])

  assessments    Assessment[]

  @@index([organizationId])
  @@map("assessment_templates")
}

model ISOStandardSection {
  id            String   @id @default(uuid())
  sectionNumber String   @unique
  title         String
  description   String?
  order         Int      @default(0)
  createdAt     DateTime @default(now())

  parentId      String?
  parent        ISOStandardSection?  @relation("SectionHierarchy", fields: [parentId], references: [id])
  children      ISOStandardSection[] @relation("SectionHierarchy")

  questions     AuditQuestion[]
  responses     QuestionResponse[]

  @@index([parentId])
  @@map("iso_standard_sections")
}

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  passwordHash    String
  firstName       String
  lastName        String
  role            UserRole  @default(VIEWER)
  isActive        Boolean   @default(true)
  lastLoginAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])

  assessments       Assessment[]
  responses         QuestionResponse[]
  teamMemberships   AssessmentTeamMember[]
  uploadedEvidence  Evidence[]

  @@index([organizationId])
  @@map("users")
}

model Assessment {
  id              String    @id @default(uuid())
  title           String
  description     String?
  status          AssessmentStatus @default(DRAFT)
  auditType       AuditType @default(INTERNAL)
  scope           String?
  objectives      Json?
  overallScore    Float?
  sectionScores   Json?
  scheduledDate   DateTime?
  dueDate         DateTime?
  completedDate   DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id])

  leadAuditorId   String
  leadAuditor     User @relation(fields: [leadAuditorId], references: [id])

  templateId      String?
  template        AssessmentTemplate? @relation(fields: [templateId], references: [id])

  previousAssessmentId String?
  previousAssessment   Assessment? @relation("AssessmentHistory", fields: [previousAssessmentId], references: [id])
  followUpAssessments  Assessment[] @relation("AssessmentHistory")

  responses       QuestionResponse[]
  teamMembers     AssessmentTeamMember[]

  @@index([organizationId])
  @@index([templateId])
  @@index([previousAssessmentId])
  @@map("assessments")
}

model AssessmentTeamMember {
  id           String         @id @default(uuid())
  role         TeamMemberRole @default(AUDITOR)
  createdAt    DateTime       @default(now())

  assessmentId String
  assessment   Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)

  userId       String
  user         User @relation(fields: [userId], references: [id])

  @@unique([assessmentId, userId])
  @@index([assessmentId])
  @@index([userId])
  @@map("assessment_team_members")
}

model AuditQuestion {
  id                String    @id @default(uuid())
  questionNumber    String    @unique
  questionText      String
  guidance          String?
  score1Criteria    String?
  score2Criteria    String?
  score3Criteria    String?
  standardReference String?
  isActive          Boolean   @default(true)
  order             Int       @default(0)
  createdAt         DateTime  @default(now())

  sectionId         String?
  section           ISOStandardSection? @relation(fields: [sectionId], references: [id])

  responses         QuestionResponse[]

  @@index([sectionId])
  @@map("audit_questions")
}

model QuestionResponse {
  id              String    @id @default(uuid())
  score           Int?
  justification   String?
  isDraft         Boolean   @default(true)
  actionProposal  String?
  conclusion      String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  assessmentId    String
  assessment      Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)

  questionId      String
  question        AuditQuestion @relation(fields: [questionId], references: [id])

  userId          String
  user            User @relation(fields: [userId], references: [id])

  sectionId       String?
  section         ISOStandardSection? @relation(fields: [sectionId], references: [id])

  evidence        Evidence[]

  @@unique([assessmentId, questionId])
  @@index([assessmentId])
  @@index([sectionId])
  @@map("question_responses")
}

model Evidence {
  id            String       @id @default(uuid())
  type          EvidenceType
  fileName      String
  filePath      String
  fileSize      Int
  mimeType      String
  description   String?
  uploadedAt    DateTime     @default(now())

  responseId    String
  response      QuestionResponse @relation(fields: [responseId], references: [id], onDelete: Cascade)

  uploadedById  String
  uploadedBy    User @relation(fields: [uploadedById], references: [id])

  @@index([responseId])
  @@index([uploadedById])
  @@map("evidence")
}
